extends layouts/index
block content

    .form__container
        form.form-join(action="/join" method="POST")
            h1.form-join__title Create your Google Account
            h4.form-join__paragraph to continue to YouTube
            input(type="text" name="firstName" placeholder="First name" required)
            input(type="text" name="lastName" placeholder="Last name" required)
            input(type="email" name="email" placeholder="Your email address" required)
            input(type="password" name="password" placeholder="Password" required)
            input(type="password" name="password2" placeholder="Confirm" required)
            input.submit(type="submit" value="JOIN")
