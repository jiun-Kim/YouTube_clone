            else
                .header__user-login
                    a(href=`/user${routes.userProfile}`)
                        button(type="button")
                            i.fas.fa-user
                            span Profile
                .header__user-login
                    a(href=routes.logout)
                        button(type="button")
                            i.fas.fa-user
                            span Logout
    
    