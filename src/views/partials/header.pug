header.header
    .header__logo 
        a(href="/")
            i.fab.fa-youtube
            span YouTube
    .header__search
        form.search(action=routes.search method="GET")
            input(type="input" name="search" placeholder="Search")
            button(type="submit")
                i.fas.fa-search
    .header__user
        .header__upload
            a(href=`/video${routes.upload}`)
                button(type="button")
                    i.fas.fa-caret-square-up
                    span Upload Video
        .header__user-join
            if !loggedUser
                a(href=routes.join)
                    button(type="button")
                        i.fas.fa-user
                        span Sign In
                a(href=routes.login)
                    button(type="button")
                        i.fas.fa-user
                        span Log In
                    //- img(src="")
                    //- The img from here will be change avatar img user upload img for avatar 
                        it will be share
