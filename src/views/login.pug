extends layouts/index
block content

    .form__container
        form.form-login(action=routes.login method="POST")
            h1.form-login__title Login
            h4.form-login__paragraph Use your account
            input(type="email" name="email" placeholder="Your email address" required)
            input(type="password" name="password" placeholder="Password" required)
            button.kakao Login with Kakao
                a(href="#")
            button.google Login with Google
                a(href="#")
            input.submit(type="submit" value="LogIn")
