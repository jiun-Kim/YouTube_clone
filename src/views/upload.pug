extends layouts/index
block content

    .form__container
        form.form-upload(action=`/video${routes.upload}` method="POST" enctype="multipart/form-data")
            i.fas.fa-file-upload
            label(for="videoFile") Video File
            input(type="file" id="videoFile" name="videoFile")
            input(type="text" name="title" placeholder="Title")
            input(type="text" name="description" placeholder="Description")
            i.fas.fa-file-upload 
            label(for="thumbnail")  Thumbnail File
            input(type="file" id="thumbnail" name="thumbnail" placeholder="Thumbnail")
            input(type="submit" value="Upload")
