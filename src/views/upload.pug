extends layouts/index
block content

    .form__container
        form.form-upload(action=`/video${routes.upload}` method="POST" enctype="multipart/form-data")
            .form-upload__file
                .icon-file-upload
                    i.fas.fa-file-upload
                .label-file-upload
                    label.label(for="videoFile") Select File
                    input.file(type="file" id="videoFile" name="videoFile" required)
            .form-upload__text
                input.title(type="text" name="title" placeholder="Title" required)
                textarea.description(name="description" placeholder="Description" required)

            input.submit(type="submit" value="Upload")
